<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#CCEE5E5E">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Đăng ký hệ thống"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold|italic" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        >
        <EditText
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ Tên..."
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/editTextHoTen"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textViewNamSinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_textview"

            android:hint="Ngày tháng năm sinh..."
            android:inputType="datetime"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/textViewGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_textview"
            android:hint="Giới Tính"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20dp"

            />
        <EditText
            android:id="@+id/editTextTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_textview"
            android:hint="Tài khoản..."

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/editTextMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_textview"
            android:hint="Mật khẩu..."
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:inputType="textPassword"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/buttonDangKyDialog"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@drawable/custom_button"/>

            <Button
                android:id="@+id/buttonHuyDangKyDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@drawable/custom_button"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="#242404"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>